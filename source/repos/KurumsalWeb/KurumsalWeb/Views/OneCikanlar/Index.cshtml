@model IEnumerable<KurumsalWeb.Models.Model.OneCikanlar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Öne Çıkanlar</h2>
<a href="/OneCikanlar/Create">Yeni Ekle</a>
<table class="table table-striped">
    <thead>
    <tr>
        <th>#</th>
        <th>Başlik</th>
        <th>Açıklama</th>
        <th>Resim URL</th>
        <th>İşlemler</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.OneCikanId</td>
            <td>@item.Baslik</td>
            <td>@Html.Raw(item.Aciklama)</td>
            <td><img width="100" height="100" src="@item.ResimURL"/></td>
            <td><a href="/OneCikanlar/Edit/@item.OneCikanId">Düzenle</a> | <a href="/OneCikanlar/Delete/@item.OneCikanId">Sil</a></td>
        </tr>

    }
   

    </tbody>
</table>