                                </div>
                                <p>
                                    Lorem Ipsum Nedir?
                                </p>

                            </div>
                            <div class="box-bottom">
                                <a href="#">Learn more</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- divider -->
        <div class="row">
            <div class="col-lg-12">
                <div class="solidline">
                </div>
            </div>
        </div>
        <!-- end divider -->
        <!-- Portfolio Projects -->
        <div class="row">
            <div class="col-lg-12">
                <h4 class="heading">Öne Çıkanlar</h4>
                <div class="row">
                    <section id="projects">
                        <ul id="thumbs" class="portfolio">
                            @foreach (var item in ViewBag.OneCikanlar)
                            {
                                <!-- Item Project and Filter Name -->
                                <li class="col-lg-3 design" data-id="id-0" data-type="web">
                                    <div class="item-thumbs">
                                        <!-- Fancybox - Gallery Enabled - Title - Full Image -->
                                        <a class="hover-wrap fancybox" data-fancybox-group="gallery" title="@item.Baslik" href="@item.ResimURL">
                                            <span class="overlay-img">@item.Baslik</span>
                                            <span class="overlay-img-thumb font-icon-plus">@Html.Raw(item.Aciklama)</span>
                                        </a>
                                        <!-- Thumb Image and Description -->
                                        <img src="@item.ResimURL" alt="@item.Baslik">
                                    </div>
                                </li>
                            }


                        </ul>
                    </section>
                </div>
            </div>

        </div>

    </div>
</section>
