@model IEnumerable<KurumsalWeb.Models.Model.Blog>

@{
    ViewBag.Title = "BlogAra";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
<div class="col-md-8">
<h2>Aradığınız İçerikteki Blog Kayıtları</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Kategori.KategoriAd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Yazar.Adi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Baslik)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Icerik)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ResimURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Begeni)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GoruntulenmeSayisi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EklenmeTarihi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Kategori.KategoriAd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Yazar.Adi)
        </td>
        <td>
            <a href="/Home/BlogDetay/">@Html.DisplayFor(modelItem => item.Baslik)</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Icerik)
        </td>
        <td>
            <img class="img-rounded img-responsive" width="75"src="@item.ResimURL" alt="@item.Baslik"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Begeni)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GoruntulenmeSayisi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EklenmeTarihi)
        </td>
      
    </tr>
}

</table>
</div>